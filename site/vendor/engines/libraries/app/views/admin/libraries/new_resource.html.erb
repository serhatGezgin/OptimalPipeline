<h2>Add Resource to Library &quot;<%= @library.name %>&quot;</h2>
<div id="add_resource_pane">
<%- if @avail_resources.any? %>
  <%- form_tag(add_resource_admin_library_path(@library)) do %>
    <div class="field">
      <label for="res_resource_id">Available Resources</label>
      <%= select_tag "res[resource_id]", options_from_collection_for_select(@avail_resources, "id", "file_name") %>
    </div>
    <div class="field">
      <label for="res_description">Description</label>
      <%= text_area_tag "res[description]", nil, :class => "wymeditor widest" %>
    </div>
    <div class="form-actions">
      <div class="form-actions-left">
        <%= submit_tag "Add Resource", :class => "wymupdate button", :id => "submit_button" %>
        <%= link_to "Cancel", resources_admin_library_path(@library), :class => "close_dialog button", :id => "cancel_button" %>
      </div>
      <div class="form-actions-right"></div>
    </div>
  <%- end %>
<%- else %>
  <p>No resources available to add to this library.  Either there are no
    resources or all available resources have been added</p>
<%- end %>
</div>
